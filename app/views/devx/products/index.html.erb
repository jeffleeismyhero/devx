<div class="container padding-header">
   <div class="row">
    <div class="medium-12 columns">
       <h3 class="ecommerce-page-title">Products</h3>
     </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="medium-12 columns">
      <%= search_form_for @q, html: { id: 'df_search_form' } do |f| %>
        <%= f.search_field :name_cont %>
        <%= link_to 'Search', '#', class: 'button primary', onclick: 'document.getElementById("df_search_form").submit(); return false;' %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
     <% @products.in_groups_of(3, false).try(:each) do |group| %>
      <div class="large-12 columns no-padding">
        <%= render partial: 'product', locals: { group: group } %>
      </div>
     <% end %>
   </div>
</div>
