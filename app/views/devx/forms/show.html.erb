<% provide(:title, "#{@form.name}") %>

<!--   <div style="padding:140px 0px;margin:0 auto;text-align:center">
    <h1 style="padding:0;margin:0;border:none;color:#000;"><%= @form.name %></h1>
  </div> -->
<% if flash.any? %>
  <div class="container notify">
    <div class="row">
      <div class="large-12 columns">
          <%= notice %>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="medium-10 medium-offset-1 columns">
      <div class="page-header"><%= @form.name %></div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="medium-10 medium-offset-1 columns">
      <%= form_for @form, url: devx.forms_path, method: :post, html: { class: 'form-builder' } do |f| %>
        <%= f.hidden_field :id %>
        <%= f.fields_for :submission_content do |submission| %>
          <% @form.fields.ordered.try(:each) do |field| %>
            <%= render "#{field.field_type}", field: field, f: submission %>
          <% end %>
        <% end %>
        <div class="large-12 columns no-padding">
          <%= f.submit 'Submit' %>
        </div>
    <% end %>
  </div>
</div>
