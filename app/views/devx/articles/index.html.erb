<div class="container" style="padding:20px 0px">
    <div class="row">
		 <% if @articles.any? %>
		    <%= render @articles %>
		<% else %>
	       <div class="large-12 columns">
	            <h4 style="text-align:center">No posts to display.</h4>
	        </div>
	     <% end %>
    </div>
</div>

<div class="container">
    <div class="row full-width">
    	<div class="large-12 columns">
        <% if @articles.any? %>
            <%= will_paginate @articles, class: 'apple_pagination' %>
        <% end %>
    </div>
</div>