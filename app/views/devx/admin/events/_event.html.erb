<tr>
  <td><%= link_to event.name, devx.edit_admin_event_path(event) %></td>
  <td><%= strip_tags(event.description) %></td>
  <td><%= event.start_time.try(:strftime, '%m/%d/%Y %H:%I:%s') %></td>
  <td><%= event.end_time.try(:strftime, '%m/%d/%Y %H:%I:%s') %></td>
  <td>
    <%= link_to 'Edit', devx.edit_admin_event_path(event) %>
    <%= link_to 'Delete', devx.admin_event_path(event), method: :delete, data: { confirm: "Are you sure you want to delete #{event.name}?" } %>
  </td>
</tr>