<div class="container">
	<div class="row">

		<div class="col-12 columns">
			<h1>Class Galleries</h1>
		</div>

		<div class="col-12 columns" style="padding-bottom:20px;">
			<i class="fa fa-map-signs" aria-hidden="true"></i> <%=link_to 'Create Class Gallery', devx.new_portal_classroom_class_gallery_path %>
		</div>

		<div class="col-12 columns">
			<table>
				<thead>
					<tr>
						<th>Name</th>
						<th>Active</th>
						<th>Created At</th>
						<th>&nbsp</th>
					</tr>
				</thead>

				<tbody>
					<%= render partial: 'class_gallery', collection: @class_galleries %>
				</tbody>
			</table>
		</div>

	</div>
</div>
