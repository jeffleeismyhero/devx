<tr>
	<td> <%= announcement.content %> </td>
	<td> <%= ldate announcement.created_at %> </td>
	<td> 
		<%= link_to 'Edit', devx.edit_portal_announcement_path(announcement) %> <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
		<%= link_to 'Delete', devx.portal_announcement_path(announcement), method: :delete, data: { confirm: "Are you sure you want to delete this?" } %> 
		<i class="fa fa-trash" aria-hidden="true"></i>
	</td>
</tr>