<% provide(:title, '' + controller_name.classify.pluralize) %>

<div class="container">
  <div class="row">
    <div class="col-12 columns">
      <h1><%= yield(:title) %></h1>
    </div>

    <div class="col-12 columns" style="padding-bottom:20px;">
      <i class="fa fa-map-signs" aria-hidden="true"></i> <%= link_to 'Create Product SKU', devx.new_portal_product_product_sku_path(@product), style: 'margin-right: 20px;' %> 
      <i class="fa fa-binoculars" aria-hidden="true"></i> <%= link_to 'View Products', devx.portal_products_path %> 
      <div style="float:right;">
        <span style="padding:0 10px;">Filter by <i class="fa fa-caret-down" aria-hidden="true"></i></span>
        <span style="padding:0 10px;">Arrange by <i class="fa fa-caret-down" aria-hidden="true"></i></span>
        <!--<span style="padding:0 10px;">Grid View <i class="fa fa-th" aria-hidden="true"></i></span>-->
      </div>
    </div>

    <div class="col-12 columns">
      <table>
        <thead>
          <tr>
            <th>Price</th>
            <th>Active</th>
            <th>&nbsp;</th>
          </tr>
        </thead>

        <tbody>
          <%= render partial: 'product_sku', collection: @product_skus %>
        </tbody>
      </table>
    </div>
  </div>
</div>