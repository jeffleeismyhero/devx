<% provide(:title, 'Edit Announcement') %>

<div class="container">
  <div class="row">
    <div class="col-12 columns">
      <h1><%= yield(:title) %></h1>
    </div>
    <div class="col-12 columns">
      <%= link_to 'Back to Classrooms', devx.portal_classroom_class_announcements_path %>
      <%= form_for @class_announcement, url: devx.portal_classroom_class_announcement_path(@classroom, @class_announcement) do |f| %>
        <%= render partial: 'form', locals: { f: f } %>
      <% end %>
    </div>
  </div>
</div>
