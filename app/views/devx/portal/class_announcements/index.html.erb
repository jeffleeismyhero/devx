<% provide(:title, 'Class Announcements') %>

<div class="container">
	<div class="row">

		<div class="col-12 columns">
			<h1><%= yield(:title) %></h1>
		</div>

		<div class="col-12 columns" style="padding-bottom:20px;">
			<i class="fa fa-map-signs" aria-hidden="true"></i> <%=link_to 'Create Announcement', devx.new_portal_classroom_class_announcement_path %>
		</div>

		<div class="col-12 columns">
			<table>
				<thead>
					<tr>
						<th>Post Date</th>
						<th>Content</th>
						<th>&nbsp</th>
					</tr>
				</thead>

				<tbody>
					<%= render partial: 'class_announcement', collection: @class_announcements %>
				</tbody>
			</table>
		</div>

	</div>
</div>
