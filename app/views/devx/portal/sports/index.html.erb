<% provide(:title, 'Manage Sports') %>
<div class="container">


  <div class="row">


    <div class="col-12 columns">
      <h1><%= yield(:title) %></h1>
    </div>

    <div class="col-12 columns" style="padding-bottom:20px;">
        <%= link_to '<i class="fa fa-plus"></i> New Sport'.html_safe, new_portal_sport_path %>

        <div style="float:right;">
          <span style="padding:0 10px;">Filter by <i class="fa fa-caret-down" aria-hidden="true"></i></span>
          <span style="padding:0 10px;">Arrange by <i class="fa fa-caret-down" aria-hidden="true"></i></span>
          <!--<span style="padding:0 10px;">Grid View <i class="fa fa-th" aria-hidden="true"></i></span>-->
        </div>
    </div>

    <div class="col-12 columns">
      <table width="100%">
        <thead>
          <tr style="background-color:#ACCC38;">
            <th style="color:#084269; padding:10px; text-align:left; width:33%;">Sport</th>
            <th style="color:#084269; padding:10px; text-align:left; width:33%;">Created On</th>
            <th style="color:#084269; padding:10px; text-align:left; width:33%;">&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'sport', collection: @sports %>

           <tr>
            <td colspan="1" style="text-align:left; padding: 15px 0 0 10px;"><%= "Total: #{ @sports.count } sports" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>


</div>




