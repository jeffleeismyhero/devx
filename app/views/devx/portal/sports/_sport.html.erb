<tr>
    <td style="padding:10px;border-bottom:1px solid #ccc;"><%= link_to sport.name, devx.edit_portal_sport_path(sport) %></td>
    <td style="padding:10px;border-bottom:1px solid #ccc;"><%= sport.created_at.try(:strftime, '%m/%d/%Y %I:%M %P') %></td>
    <td style="text-align:right; padding:10px;border-bottom:1px solid #ccc;">
    <%= link_to 'Edit', devx.edit_portal_sport_path(sport) %> <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
    <%= link_to 'Delete', devx.portal_sport_path(sport), method: :delete, data: { confirm: "Are you sure you want to delete #{sport.name}?" } %> <i class="fa fa-trash" aria-hidden="true"></i>
    </td>
</tr>

