<% provide(:title, @ticket.summary) %>

<div class="container">
  <div class="row">
    <div class="col-12 columns">
      <h1><%= yield(:title) %></h1>
    </div>
    <div class="col-12 columns">
      <%= link_to 'View all Tickets', devx.portal_tickets_path %>
    </div>
    <div class="col-8 columns">
      <h3>Summary</h3>
      <table width="40%">
        <tbody>
          <tr>
            <td>Status</td>
            <td><%= @ticket.status %></td>
          </tr>
          <tr>
            <td>Ticket ID</td>
            <td><%= @ticket.id %></td>
          </tr>
          <tr>
            <td>Created</td>
            <td><%= ldate @ticket.created_at %></td>
          </tr>
          <tr>
            <td>Updated</td>
            <td><%= ldate @ticket.updated_at %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-8 columns">
    <h3>Details</h3>
    </div>
  </div>
</div>