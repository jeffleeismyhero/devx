<tr>
  <td style="padding:10px;border-bottom:1px solid #ccc;"><%= link_to extracurricular.name, portal_extracurricular_path(extracurricular) %></td>
  <td style="padding:10px;border-bottom:1px solid #ccc;"><%= extracurricular.created_at.try(:strftime, '%m/%d/%Y %I:%M %P') %></td>
  <td style="text-align:right; padding:10px;border-bottom:1px solid #ccc;">
    <%= link_to '<i class="fa fa-edit"></i> Edit'.html_safe, edit_portal_extracurricular_path(extracurricular) %>
    <%= link_to '<i class="fa fa-trash"></i> Delete'.html_safe, portal_extracurricular_path(extracurricular), method: :delete, data: { confirm: "Are you sure you want to delete \"#{extracurricular.name}\"?" } %>
  </td>
</tr>




