<% provide(:title, 'Edit Extracurricular') %>
<div class="container">
  <div class="row">
    <div class="col-12 columns">
      <h1><%= yield(:title) %></h1>
    </div>
    <div class="col-12">
      <%= link_to 'Back to Extracurriculars', devx.portal_extracurriculars_path %>
      <%= form_for @extracurricular, url: portal_extracurricular_path(@extracurricular) do |f| %>
        <% if @extracurricular.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@extracurricular.errors.count, "error") %> prohibited
                this extracurricular from being saved:
              </h2>
              <ul>
                <% @extracurricular.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        <%= render partial: 'form', locals: { f: f } %>
      <% end %>
    </div>
  </div>
</div>
