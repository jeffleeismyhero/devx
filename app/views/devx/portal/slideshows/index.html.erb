<% provide(:title, '' + controller_name.classify.pluralize) %>

<div class="container">
  <div class="row">
    <div class="large-12 columns">
      <h1><%= yield(:title) %></h1>
    </div>
    <div class="large-12 columns">
      <table width="100%">
        <thead>
          <tr>
            <th>Name</th>
            <th># of Slides</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'slideshow', collection: @slideshows %>
        </tbody>
      </table>
      <%= link_to 'Add Slideshow', new_portal_slideshow_path %> 
    </div>
  </div>
</div>