<tr>
    <td style="padding:10px;border-bottom:1px solid #ccc;"><%= link_to article.title, devx.edit_portal_article_path(article) %></td>
    <td style="padding:10px;border-bottom:1px solid #ccc;"><%= article.short_description %></td>
    <td style="padding:10px;border-bottom:1px solid #ccc;"><%= article.published_at.try(:strftime, '%m/%d/%Y %I:%M %P') %></td>
    <td style="text-align:right; padding:10px;border-bottom:1px solid #ccc;">
    <%= link_to 'Edit', devx.edit_portal_article_path(article) %> <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
    <%= link_to 'Delete', devx.portal_article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete #{article.title}?" } %> <i class="fa fa-trash" aria-hidden="true"></i>
    </td>
</tr>
