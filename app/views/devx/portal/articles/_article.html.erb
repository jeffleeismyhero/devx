<tr>
  <td><%= link_to article.title, devx.edit_portal_article_path(article) %></td>
  <td><%= article.short_description %></td>
  <td><%= article.published_at.try(:strftime, '%m/%d/%Y %H:%I:%s') %></td>
  <td>
    <%= link_to 'Edit', devx.edit_portal_article_path(article) %>
    <%= link_to 'Delete', devx.portal_article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete #{article.title}?" } %>
  </td>
</tr>