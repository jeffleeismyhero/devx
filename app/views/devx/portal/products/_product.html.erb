<tr>
    <td style="padding:10px;bproduct-bottom:1px solid #ccc;"><%= product.name %></td>
    <td style="padding:10px;bproduct-bottom:1px solid #ccc;"><%= number_to_currency product.price %></td>
    <td style="text-align:right; padding:10px;bproduct-bottom:1px solid #ccc;">
    <%= link_to 'Edit', devx.edit_portal_product_path(product) %> <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
    <%= link_to 'Delete', devx.portal_product_path(product), method: :delete, data: { confirm: "Are you sure you want to delete #{product.name}?" } %> <i class="fa fa-trash" aria-hidden="true"></i>
    </td>
</tr>
