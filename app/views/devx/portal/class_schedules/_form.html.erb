<div class="col-8 columns no-padding" style="margin-top:20px;">
    <div class="col-12 columns cd-edit-form">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
      <div class="col-12 columns cd-edit-form">
        <%= f.label :description %>
        <%= f.cktext_area :description %>
    </div>
    <div class="col-3 columns cd-edit-form">
      <%= f.label :start_time_date, "Start Date" %>
      <%= f.text_field :start_time_date, value: date_value(f.object.start_time_date), placeholder: date_value(Date.today), class: 'datepicker' %>
    </div>
    <div class="col-3 columns cd-edit-form">
      <%= f.label :start_time_time, "Start Time" %>
      <%= f.text_field :start_time_time, value: time_value(f.object.start_time_time), placeholder: time_value(Time.now), class: 'timepicker' %>
    </div>
    <div class="col-3 columns cd-edit-form">
      <%= f.label :end_time_date, "End Date" %>
      <%= f.text_field :end_time_date, value: date_value(f.object.end_time_date), placeholder: date_value(Date.today), class: 'datepicker' %>
    </div>
    <div class="col-3 columns cd-edit-form">
      <%= f.label :end_time_time, "End Time" %>
      <%= f.text_field :end_time_time, value: time_value(f.object.end_time_time), placeholder: time_value(Time.now), class: 'timepicker' %>
    </div>
</div>
<div class="col-12 columns cd-update-form" style="margin-top:20px;">
    <%= f.submit %>
</div>
