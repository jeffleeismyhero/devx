<tr>
  <td><%= link_to administration.try(:full_name), devx.edit_portal_administration_path(administration) %></td>
  <td><%= administration.school_id %></td>
  <% if app_settings['balance_tracking'] %><td><%= number_to_currency administration.current_balance %></td><% end %>
  <td><%= administration.active %></td>
  <td>
    <%= link_to 'Edit', devx.edit_portal_administration_path(administration) %>
  </td>

  <% if current_user && (current_user.super_administrator?) %>
	  <td> 
	  	<%= link_to 'Delete', devx.portal_administration_path(administration), method: :delete, data: {confirm: "Are you sure you want to delete this CRM record?"} %>
	  </td>
  <% end %>
</tr>
