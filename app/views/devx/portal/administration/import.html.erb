<% provide(:title, 'Import Contacts') %>

<div class="container">
    <div class="row">
        <div class="col-12 columns">
            <h1><%= yield(:title) %></h1>
        </div>
        <div class="col-12 columns" style="padding:20px 0.9375em;">
            <%= link_to '<small>Download Template</small>'.html_safe, '#' %>
        </div>
        <div class="col-12 columns" style="padding-bottom:20px;">
            <%= form_for @import, url: devx.portal_administration_import_path, method: :post do |f| %>
                <%= f.label :file %>
                <%= f.file_field :file %>
                <%= label_tag :import_type %>
                <%= select_tag :import_type, options_for_select(%w[Prospects Students Faculty Staff Alumni]), { include_blank: true } %>

                <div class="col-12 columns" style="margin-top:20px;">
                    <div class="cd-update-form">
                        <%= submit_tag 'Import Contacts' %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>