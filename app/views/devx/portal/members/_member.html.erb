<tr>
    <td style="padding:10px;border-bottom:1px solid #ccc;"><%= link_to member.try(:full_name), devx.edit_portal_member_path(member) %></td>
    <td style="padding:10px;border-bottom:1px solid #ccc;"><%= member.position %></td>
    <td style="text-align:right; padding:10px;border-bottom:1px solid #ccc;">
    <%= link_to 'Edit', devx.edit_portal_member_path(member) %> <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
    <%= link_to 'Delete', devx.portal_member_path(member), method: :delete, data: { confirm: "Are you sure you want to delete #{member.try(:full_name)}?" } %> <i class="fa fa-trash" aria-hidden="true"></i>
    </td>
</tr>