<% provide(:title, '' + controller_name.classify.pluralize) %>

<div class="container">
    <div class="row">
        <div class="col-12 columns">
            <h1><%= yield(:title) %></h1>
        </div>
        <div class="col-12 columns" style="margin-bottom:30px">
          <%= form_tag devx.portal_documents_path, method: :post, id: 'document-dropzone', class: 'dropzone' do %>
            <div class="fallback">
              <%= file_field_tag :file %>
            </div>
          <% end %>
        </div>
        <div class="col-12 columns" style="padding-bottom:20px;">
            <div style="float:right;">
                <span style="padding:0 10px;"><i class="fa fa-caret-down" aria-hidden="true"></i> Filter by</span>
                <span style="padding:0 10px;"><i class="fa fa-caret-down" aria-hidden="true"></i>Arrange by</span>
                <!--<span style="padding:0 10px;">Grid View <i class="fa fa-th" aria-hidden="true"></i></span>-->
              <div class="cd-edit-form">
              <%= search_form_for @q, url: devx.portal_documents_path do |f| %>
                  <%= f.search_field :name_cont %>
                  <%= f.submit %>
              <% end %>
              </div>
            </div>
        </div>
        
        <div class="col-12 columns">
            <table>
                <thead>
                    <tr>
                        <th><%= sort_link @q, :name %></th>
                        <th>Link</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    <%= render partial: 'document', collection: @documents %>
                </tbody>
            </table>
        </div>
    
    </div>

</div>