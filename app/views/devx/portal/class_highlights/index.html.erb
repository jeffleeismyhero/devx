
<div class="container">
	<div class="row">

		<div class="col-12 columns">
			<h1>Class Highlights</h1>
		</div>

		<div class="col-12 columns" style="padding-bottom:20px;">
			<i class="fa fa-map-signs" aria-hidden="true"></i> <%=link_to 'Create Class Highlight', devx.new_portal_classroom_class_highlight_path %>

			<div style="float:right;">
				<span style="padding:0; 10px;">Filter by <i class="fa fa-caret-down" aria-hidden="true"></i> </span>
				<span style="padding:0; 10px;">Arrange by <i class="fa fa-caret-down" aria-hidden="true"></i> </span>
			</div>
		</div>

		<div class="col-12 columns">
			<table>
				<thead>
					<tr>
						<th>Title</th>
						<th>Content</th>
						<th>Image</th>
						<th>Created At</th>
						<th>&nbsp</th>
					</tr>
				</thead>

				<tbody>
					<%= render partial: 'class_highlight', collection: @class_highlights %>
				</tbody>
			</table>
		</div>
						
	</div>
</div>