<tr>
  <td><%= link_to event.name, devx.edit_portal_calendar_event_path(@calendar, @event) %></td>
  <td><%= strip_tags(event.description) %></td>
  <td><%= event.start_time.try(:strftime, '%m/%d/%Y %I:%M %P') %></td>
  <td><%= event.end_time.try(:strftime, '%m/%d/%Y %I:%M %P') %></td>
  <td>
    <%= link_to 'Edit', devx.edit_portal_calendar_event_path(@calendar, @event) %>
    <%= link_to 'Delete', devx.portal_calendar_event_path(@calendar, @event), method: :delete, data: { confirm: "Are you sure you want to delete #{event.name}?" } %>
  </td>
</tr>