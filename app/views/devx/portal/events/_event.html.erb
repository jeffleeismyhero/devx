<tr>
  <td><%= link_to event.name, devx.edit_portal_calendar_event_path(event.calendar, event) %></td>
  <td><%= event.try(:calendar).try(:name) %></td>
  <td><%= strip_tags(event.description) %></td>
  <td><%= event.start_time.try(:strftime, '%m/%d/%Y %I:%M %P') %></td>
  <td><%= event.end_time.try(:strftime, '%m/%d/%Y %I:%M %P') %></td>
  <td>
    <%= link_to 'Edit', devx.edit_portal_calendar_event_path(event.calendar, event) %>
    <%= link_to 'Delete', devx.portal_calendar_event_path(event.calendar, event), method: :delete, data: { confirm: "Are you sure you want to delete #{event.name}?" } %>
  </td>
</tr>
