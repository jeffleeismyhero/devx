<div class="col-12 columns">
<%= f.label :name %>
<%= f.text_field :name %>
</div>
<div class="col-12 columns">
<%= f.label :description %>
<%= f.cktext_area :description %>
</div>
<div class="col-6 columns">
<%= f.label :start_time %>
<%= f.text_field :start_time, class: 'datetimepicker' %>
</div>
<div class="col-6 columns">
<%= f.label :end_time %>
<%= f.text_field :end_time, class: 'datetimepicker' %>
</div>
<div class="col-12 columns">
<%= f.label :venue %>
<%= f.select :venue_id, Devx::Venue.all.collect{ |x| [x.name, x.id] }, { include_blank: true } %>
</div>
<div class="col-6 columns">
<%= f.label :contact_name %>
<%= f.text_field :contact_name %>
</div>
<div class="col-6 columns">
<%= f.label :contact_email %>
<%= f.email_field :contact_email %>
</div>
<div class="col-6 columns">
<%= f.label :tag_list, 'Category' %>
<%= f.select :tag_list, Devx::Event.tag_counts_on(:tags).order(name: :asc), { include_blank: true }, { class: 'select2' } %>
</div>
<div class="col-12 columns">
<%= f.submit %>
</div>