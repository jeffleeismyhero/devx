<% provide(:title, 'Checkout') %>
<div class="container">
  <div class="row">
    <div class="col-12 columns">
      <h1><%= yield :title %></h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-8 columns">
      <%= form_for @order, url: devx.portal_orders_path, method: :post do |f| %>
        <%= render partial: 'form', locals: { f: f } %>
      <% end %>
    </div>
  </div>
</div>
