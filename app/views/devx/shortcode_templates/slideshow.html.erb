<div id="slideshow" class="slideshow">
    <div class="slides">
        <ul>
            <% @attributes[:slides].each do |slide| %>
              <li class="slide-image" style="background-image:url(<%= slide.image.url %>)">
                <div class="slide-title"><%= slide.title %></div>
                <div class="slide-content"><%= slide.content %></div>
              </li>
            <% end %>
        </ul>
    </div>
</div>
<script type="text/javascript">
  $(document).ready(function() { $("#slideshow").jcw_slideshow(); });
</script>