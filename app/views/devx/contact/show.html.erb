<div class="container" style="margin-bottom:20px;">
    <div class="row">
        <div class="medium-10 medium-offset-1 large-10 large-offset-1 columns">
            <div class="small-12 medium-12 large-6 xlarge-6 columns">
                <form action="/contact" method="post" class="contact-form">
                    <center>
                        <%= text_field_tag 'contact[first_name]', '', placeholder: 'First name *' %>
                        <%= text_field_tag 'contact[last_name]', '', placeholder: 'Last name *' %>
                        <%= email_field_tag 'contact[email]', '', placeholder: 'E-mail *' %>
                        <%= text_area_tag 'contact[message]', '', placeholder: 'Message', style: 'width:99.5%; margin:5px 0; padding:15px;' %>
                        <%= submit_tag 'Submit' %>
                    </center>
                </form>
            </div>
            <% if app_branding.address.present? %>
                <div class="small-12 medium-12 large-6 xlarge-6 columns maps">

                <%= app_branding.address.html_safe %>

                </div>
            <% end %>
        </div>
    </div>
</div>