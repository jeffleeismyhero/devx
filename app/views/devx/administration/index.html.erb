<% provide(:title, 'Staff Directory') %>
<div class="container banner texture" style="padding-bottom:40px;">
  <div class="row">
    <div class="medium-10 medium-offset-1 large-10 large-offset-1 columns">
      <div class="page-header"><%= yield(:title) %></div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="staff-search">
      <%= search_form_for @q, url: devx.directory_path do |f| %>
        <%= f.search_field :first_name_or_last_name_or_email_or_departments_name_cont %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
      <% @departments.each do |tag| %>
        <% s = @administrations.tagged_with(tag) %>
        <% if s.count > 0 %>
          <div class="small-12 medium-12 large-12 columns">
            <div class="medium-12 large-12 small-12 columns">
              <h4><%= tag.name.try(:titleize) %></h4>
            </div>
          </div>
          <div class="small-12 medium-12 large-12 columns">
            <% s.each do |staff| %>
              <div class="small-12 medium-6 large-4 columns" style="margin-bottom:15px;min-height:160px; margin-top:30px;">
                <div class="medium-8 columns">
                  <h6><%= staff.try(:full_name) %></h6>
                  <p><%= staff.try(:position) %></p>
                  <p><%= link_to staff.try(:email), "mailto:#{staff.email}" %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
