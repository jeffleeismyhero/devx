<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "devx/application", media: "all" %>
  <%= javascript_include_tag "devx/application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <div class="container">
    <div class="row">
      <div class="large-8 columns">
        <% if app_branding.logo.present? %>
          <%= image_tag(app_branding.logo.try(:url)) %>
        <% else %>
          <%= app_branding.company_name || 'Company Name' %>
        <% end %>
      </div>
      <div class="large-4 columns">
        <% if current_user %>
          <%= current_user.email %> | <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
        <% end %>
      </div>
    </div>
  </div>
</header>
<%= yield %>

</body>
</html>
